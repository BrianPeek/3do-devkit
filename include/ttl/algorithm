#ifndef TTL_ALGORITHM_INCLUDED
#define TTL_ALGORITHM_INCLUDED

struct algorithm
{
  template<typename T>
  static
  const
  T&
  min(const T& a_,
      const T& b_)
  {
    return (!(b_ < a_) ? a_ : b_);
  }

  template<typename T>
  static
  const
  T&
  min(const T& a_,
      const T& b_,
      const T& c_)
  {
    return algorithm::min(algorithm::min(a_,b_),c_);
  }

  template<typename T>
  static
  const
  T&
  max(const T& a_,
      const T& b_)
  {
    return ((a_ < b_) ? b_ : a_);
  }

  template<typename T>
  static
  const
  T&
  max(const T& a_,
      const T& b_,
      const T& c_)
  {
    return algorithm::max(algorithm::max(a_,b_),c_);
  }

  template<typename T = void>
  struct equal_to
  {
    typedef T value_type;

    bool
    operator()(const T &a_,
               const T &b_) const
    {
      return (a_ == b_);
    }
  };
};

#endif
