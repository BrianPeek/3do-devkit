#ifndef TTL_POD_INCLUDED
#define TTL_POD_INCLUDED

/*
  Ideally sfinae would be used (ex std::enable_if) to manage
  Plain Ol Data vs objects. type_traits somewhat works but wasn't able
  to get enable_if working. Including armcpp segv'ing. This macro
  helps creating specialized templates and functions.
 */

#define POD_TYPES_FUNC(FUNC) \
  FUNC(void) \
  FUNC(bool) \
  FUNC(char) \
  FUNC(signed char) \
  FUNC(unsigned char) \
  FUNC(signed short) \
  FUNC(unsigned short) \
  FUNC(signed int) \
  FUNC(unsigned int) \
  FUNC(signed long) \
  FUNC(unsigned long) \
  FUNC(signed long long) \
  FUNC(unsigned long long) \
  FUNC(float) \
  FUNC(double) \
  FUNC(long double)

#endif
