#pragma include_only_once

#include "memory_delete"


template<class T>
class shared_ptr
{
public:
  typedef T  element_type;
  typedef T* pointer;

public:
  shared_ptr()
    : _ptr(NULL),
      _refcount(new long(0))
  {

  }

  shared_ptr(T *ptr_)
    : _ptr(ptr_),
      _refcount(new long(1))
  {
  }

  ~shared_ptr()
  {
    _cleanup();
  }

public:
  shared_ptr(const shared_ptr &obj_)
  {
    _ptr      = obj_._ptr;
    _refcount = obj_._refcount;
    if(obj_._ptr != NULL)
      (*_refcount)++;
  }

  shared_ptr&
  operator=(const shared_ptr &obj_)
  {
    _cleanup();

    _ptr      = obj_._ptr;
    _refcount = obj_._refcount;
    if(obj_._ptr != NULL)
      (*_refcount)++;

    return *this;
  }

public:
  void
  reset()
  {
    _cleanup();
  }

  void
  reset(T *ptr_)
  {
    (void)ptr_;
  }

public:
  long
  get_count() const
  {
    return *_refcount;
  }

  T*
  get() const
  {
    return _ptr;
  }

  T*
  operator->() const
  {
    return _ptr;
  }

  T&
  operator*() const
  {
    return *_ptr;
  }

private:
  void
  _cleanup()
  {
    (*_refcount)--;
    if(*_refcount == 0)
      {
        if(_ptr != NULL)
          memory_delete(_ptr);
        memory_delete(_refcount);
      }
  }

private:
  T    *_ptr;
  long *_refcount;
};
