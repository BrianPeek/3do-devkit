#pragma include_only_once

#include "memory_delete"


template<typename T>
class auto_ptr
{
public:
  auto_ptr<T>(T *ptr_ = 0)
    : _ptr(ptr_)
  {
  }

  auto_ptr(const auto_ptr<T> &ptr_)
    : _ptr(ptr_.release())
  {
  }

  ~auto_ptr()
  {
    memory_delete(_ptr);
    _ptr = 0;
  }

public:
  void
  operator=(const auto_ptr<T> &ptr_)
  {
    reset(ptr_.release());
  }

public:
  T&
  operator*() const
  {
    return *_ptr;
  }

  T*
  operator->() const
  {
    return _ptr;
  }

  T*
  get() const
  {
    return _ptr;
  }

public:
  T*
  release()
  {
    T *tmp;

    tmp  = _ptr;
    _ptr = 0;

    return tmp;
  }

  void
  reset(T *ptr_ = 0)
  {
    memory_delete(_ptr);
    _ptr = ptr_;
  }

private:
  T *_ptr;
};
