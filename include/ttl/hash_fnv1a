#ifndef TTL_HASH_FNV1A_INCLUDED
#define TTL_HASH_FNV1A_INCLUDED

#include "cstdint"

struct FNV1A_32
{
  typedef uint32_t value_type;
  static const uint32_t OFFSET_BASIS = 0x811C9DC5;
  static const uint32_t PRIME        = 0x01000193;

  inline
  uint32_t
  initial() const
  {
    return OFFSET_BASIS;
  }

  inline
  uint32_t
  add(const uint32_t hash_,
      const uint8_t  val_) const
  {
    return ((hash_ ^ val_) * PRIME);
  }

  inline
  uint32_t
  final(const uint32_t hash_) const
  {
    return hash_;
  }
};

#endif
